h1 Listing book_entries for #{@account.user_name}
h2
  | Account
  .ui.tag.label = @account.balance || 0
  | EUR

table.ui.table
  thead
    tr
      th Description
      th Amount
      th
      th
      th

  tbody
    - @book_entries.each do |book_entry|
      tr
        td = book_entry.description
        td = book_entry.amount
        td = link_to 'Show', book_entry
        td = link_to 'Edit', edit_book_entry_path(book_entry)
        td = link_to 'Destroy', book_entry, data: {:confirm => 'Are you sure?'}, :method => :delete

br

= link_to 'New Book entry', new_book_entry_path
